<Window x:Class="CyberLab3.Resources.Popups.OsaCalcPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberLab3.Resources.Popups"
        mc:Ignorable="d"
        Title="OsaCalcPopup" Height="200" Width="350" WindowStyle="SingleBorderWindow" Background="{StaticResource BackgroundBrush}" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource DarkBackgroundBrush2}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Window.Resources>
    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="0,0,32,32">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height=".4*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
                <RowDefinition Height=".2*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="textBlock" Grid.Row="0" Grid.Column="0" Text="Calculation between traces ..." HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" Foreground="{StaticResource LabelBlueBrush}"/>
            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="ButtA" Content="A" Click="Button_Click"/>
                <Button x:Name="ButtB" Content="B" Click="Button_Click"/>
                <Button x:Name="ButtC" Content="C" Click="Button_Click"/>
                <Button x:Name="ButtD" Content="D" Click="Button_Click"/>
                <Button x:Name="ButtE" Content="E" Click="Button_Click"/>
                <Button x:Name="ButtF" Content="F" Click="Button_Click"/>
                <Button x:Name="ButtG" Content="G" Click="Button_Click"/>
                <Button x:Name="ButtH" Content="H" Click="Button_Click"/>
                <Button x:Name="ButtI" Content="I" Click="Button_Click"/>
                <Button x:Name="ButtJ" Content="J" Click="Button_Click"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="ButtA2" Content="A" Click="Button_Click"/>
                <Button x:Name="ButtB2" Content="B" Click="Button_Click"/>
                <Button x:Name="ButtC2" Content="C" Click="Button_Click"/>
                <Button x:Name="ButtD2" Content="D" Click="Button_Click"/>
                <Button x:Name="ButtE2" Content="E" Click="Button_Click"/>
                <Button x:Name="ButtF2" Content="F" Click="Button_Click"/>
                <Button x:Name="ButtG2" Content="G" Click="Button_Click"/>
                <Button x:Name="ButtH2" Content="H" Click="Button_Click"/>
                <Button x:Name="ButtI2" Content="I" Click="Button_Click"/>
                <Button x:Name="ButtJ2" Content="J" Click="Button_Click"/>
            </StackPanel>
            <Button x:Name="okButt" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Content="OK" Width="50" Click="okButt_Click"/>
        </Grid>
    </Border>
</Window>
