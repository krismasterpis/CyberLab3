<Page x:Class="CyberLab3.Pages.TemperaturePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CyberLab3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1400"
      Title="TemperaturePage" KeepAlive="True">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".2*"/>
            <ColumnDefinition Width=".8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
            <GroupBox Grid.Row="0" Grid.Column="0" BorderThickness="0" Background="{StaticResource DarkBackgroundBrush}" Margin="5,0,5,5" Padding="5">
                <GroupBox.Header>
                    <Label Content="Connection" FontSize="20" FontWeight="Bold" Foreground="#6b8094"/>
                </GroupBox.Header>
                <StackPanel>
                    <Button x:Name="ConnectButt" Content="Connect"/>
                    <UniformGrid Columns="2" Margin="0,5,0,0">
                        <TextBlock Text="Ip address" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                        <TextBox/>
                    </UniformGrid>
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="0" BorderThickness="0" Background="{StaticResource DarkBackgroundBrush}" Margin="5,0,5,5">
                <GroupBox.Header>
                    <Label Content="Measurement" FontSize="20" FontWeight="Bold" Foreground="#6b8094"/>
                </GroupBox.Header>
                <StackPanel Orientation="Vertical">
                    <UniformGrid Columns="2">
                        <Button x:Name="SingleButton" Content="Single" Margin="0,0,5,0"/>
                        <Button Content="Repeat" Margin="5,0,0,0"/>
                    </UniformGrid>
                    <UniformGrid Columns="2">
                        <TextBlock Text="Interval (ms)" Margin="0,5,5,0" HorizontalAlignment="Right"/>
                        <TextBox Margin="5,5,0,0"/>
                    </UniformGrid>
                    <Button Content="Clear all" Margin="0,5,0,0"/>
                    <Button Content="Save all" Margin="0,5,0,0"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="0" BorderThickness="0" Background="{StaticResource DarkBackgroundBrush}" Margin="5,0,5,5">
                <GroupBox.Header>
                    <Label Content="Parameters" FontSize="20" FontWeight="Bold" Foreground="#6b8094"/>
                </GroupBox.Header>
                <StackPanel>
                    <TextBlock/>
                    <TextBlock Margin = "0,5,0,0"/>
                    <TextBlock Margin = "0,5,0,0"/>
                    <TextBlock Margin = "0,5,0,0"/>
                    <TextBlock Margin = "0,5,0,0"/>
                    <TextBlock Margin = "0,5,0,0"/>
                    <TextBlock Margin = "0,5,0,0"/>
                    <TextBlock Margin = "0,5,0,0"/>
                    <TextBlock Margin = "0,5,0,0"/>
                    <Button Content="More..."/>
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="0" BorderThickness="0" Background="{StaticResource DarkBackgroundBrush}" Margin="5,0,5,5">
                <GroupBox.Header>
                    <Label Content="Settings" FontSize="20" FontWeight="Bold" Foreground="#6b8094"/>
                </GroupBox.Header>
                <StackPanel>
                    <Button Content="Open Settings"/>
                    <UniformGrid Columns="2" Margin="0,5,0,0">
                        <Button Content="Save Settings" Margin="0,0,5,0"/>
                        <Button Content="Load Settings" Margin="5,0,0,0"/>
                    </UniformGrid>
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="0" BorderThickness="0" Background="{StaticResource DarkBackgroundBrush}" Margin="5,0,5,5">
                <GroupBox.Header>
                    <Label Content="Graph" FontSize="20" FontWeight="Bold" Foreground="#6b8094"/>
                </GroupBox.Header>
                <StackPanel>
                    <Button Content="Open Graph Settings"/>
                    <ListView Margin = "0,5,0,0" Height="100" MaxHeight="100"/>
                    <StackPanel>
                        <UniformGrid Columns="2" Margin="0,5,0,0">
                            <CheckBox Content="Add X marker A" VerticalContentAlignment="Center" FontSize="14" HorizontalAlignment="Center"/>
                            <CheckBox Content="Add X marker B" VerticalContentAlignment="Center" FontSize="14" HorizontalAlignment="Center"/>
                        </UniformGrid>
                        <UniformGrid Columns="2" Margin="0,5,0,0">
                            <CheckBox Content="Add Y marker A" VerticalContentAlignment="Center" FontSize="14" HorizontalAlignment="Center"/>
                            <CheckBox Content="Add Y marker B" VerticalContentAlignment="Center" FontSize="14" HorizontalAlignment="Center"/>
                        </UniformGrid>
                        <TextBlock Margin = "0,5,0,0"/>
                        <TextBlock Margin = "0,5,0,0"/>
                        <TextBlock Margin = "0,5,0,0"/>
                        <TextBlock Margin = "0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <Border Grid.Column="1" Grid.Row="0" Margin="10" CornerRadius="16" Background="{StaticResource DarkBackgroundBrush}">
            <ContentControl Content="{Binding TempPlot, Mode=OneTime}" Margin="10"/>
        </Border>
    </Grid>
</Page>
