<Page x:Class="CyberLab3.Pages.SwitchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CyberLab3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1079" d:DesignWidth="1870"
      Title="SwitchPage" KeepAlive="True">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".2*"/>
            <ColumnDefinition Width=".8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2">
            <GroupBox Grid.Row="0" Grid.Column="0" BorderThickness="0" Background="{StaticResource DarkBackgroundBrush}" Margin="5,0,5,5" Padding="5">
                <GroupBox.Header>
                    <Label Content="Connection" FontSize="20" FontWeight="Bold" Foreground="#6b8094"/>
                </GroupBox.Header>
                <StackPanel>
                    <Button x:Name="ConnectButt" Content="Connect" Click="ConnectButt_Click"/>
                    <UniformGrid Columns="2" Margin="0,5,0,0">
                        <TextBlock Text="Ip address" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                        <TextBox x:Name="IpTextBox"/>
                    </UniformGrid>
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="0" BorderThickness="0" Background="{StaticResource DarkBackgroundBrush}" Margin="5,0,5,5">
                <GroupBox.Header>
                    <Label Content="Devices" FontSize="20" FontWeight="Bold" Foreground="#6b8094"/>
                </GroupBox.Header>
                <StackPanel Orientation="Vertical">
                    <ListView x:Name="DeviceList">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Slot" DisplayMemberBinding="{Binding Key}" Width="50"/>
                                <GridViewColumn Header="Module Name" DisplayMemberBinding="{Binding Value}" Width="200"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="0" BorderThickness="0" Background="{StaticResource DarkBackgroundBrush}" Margin="5,0,5,5">
                <GroupBox.Header>
                    <Label Content="group2" FontSize="20" FontWeight="Bold" Foreground="#6b8094"/>
                </GroupBox.Header>
                <StackPanel Orientation="Vertical">
                    
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="0" BorderThickness="0" Background="{StaticResource DarkBackgroundBrush}" Margin="5,0,5,5">
                <GroupBox.Header>
                    <Label Content="group3" FontSize="20" FontWeight="Bold" Foreground="#6b8094"/>
                </GroupBox.Header>
                <StackPanel Orientation="Vertical">
                    
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="0" BorderThickness="0" Background="{StaticResource DarkBackgroundBrush}" Margin="5,0,5,5">
                <GroupBox.Header>
                    <Label Content="group4" FontSize="20" FontWeight="Bold" Foreground="#6b8094"/>
                </GroupBox.Header>
                <StackPanel Orientation="Vertical">
                    
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <Border Grid.Column="1" Grid.Row="0" Margin="10" CornerRadius="16" Background="{StaticResource DarkBackgroundBrush}">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Canvas x:Name="ConnectionCanvas" Grid.Column="0" Grid.ColumnSpan="3" Panel.ZIndex="0" />

                <Border x:Name="InputBox" 
                Grid.Column="0" 
                VerticalAlignment="Center"
                Background="#007ACC" 
                CornerRadius="5" Padding="15,10" BorderBrush="White" BorderThickness="1" Panel.ZIndex="100">
                    <TextBlock Text="Input" Foreground="White" FontWeight="Bold" FontSize="32" Margin="20,10,20,10"/>
                </Border>

                <StackPanel x:Name="OutputStackPanel" 
                    Grid.Column="2" 
                    VerticalAlignment="Center" Panel.ZIndex="100"></StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
