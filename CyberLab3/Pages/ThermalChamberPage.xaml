<Page x:Class="CyberLab3.Pages.ThermalChamberPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
      xmlns:local="clr-namespace:CyberLab3.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1079" d:DesignWidth="1870"
      Title="ThermalChamberPage" KeepAlive="True">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".75*"/>
            <ColumnDefinition Width=".25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
            <Border  CornerRadius="16" Background="{StaticResource DarkBackgroundBrush}" Margin="10,5,10,5" VerticalAlignment="Stretch" Padding="10">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding LocalTimer2.Time, StringFormat=Next \setpoint \in: \{0\}}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="{StaticResource LabelBlueBrush}"/>
                    <TextBlock x:Name="AutosaveTextBlock" Text="{Binding LocalTimer3.Time, StringFormat=Autosave \in: \{0\}}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="{StaticResource LabelBlueBrush}"/>
                </StackPanel>
            </Border>
            <Border  CornerRadius="16" Background="{StaticResource DarkBackgroundBrush}" Margin="10,5,10,5" VerticalAlignment="Stretch" Padding="10">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding MeasurementFails, StringFormat=Measurement \fails: \{0\}}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="Red"/>
                </StackPanel>
            </Border>
            <Border  CornerRadius="16" Background="{StaticResource DarkBackgroundBrush}" Margin="10,5,10,5" VerticalAlignment="Stretch" Padding="10">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{Binding LocalTimer.Time, StringFormat=Timer: \{0\}}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="{StaticResource LabelBlueBrush}"/>
                    <TextBlock Text="{Binding ElapsedMs, StringFormat=Response \time: \{0\} ms}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="{StaticResource LabelBlueBrush}"/>
                    <TextBlock Text="{Binding ElapsedMsAvg, StringFormat=Response \avg. time: \{0:#.#\} ms}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="{StaticResource LabelBlueBrush}"/>
                </StackPanel>
            </Border>
        </StackPanel>
        <Border Grid.Column="0" Grid.Row="0" Margin="5" CornerRadius="16" Background="{StaticResource DarkBackgroundBrush}">
            <ContentControl Content="{Binding MainPlot, Mode=OneTime}" Margin="5"/>
        </Border>
        <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height=".35*"/>
                <RowDefinition Height=".65*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Margin="5" CornerRadius="16" Background="{StaticResource DarkBackgroundBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height=".1*"/>
                    </Grid.RowDefinitions>
                    <ContentControl Content="{Binding SetPointsPlot, Mode=OneTime}" Margin="5" Grid.Row="0"/>
                    <Button x:Name="DefineSetpointButt" Grid.Row="1" Content="Define Setpoints" Margin="50,0,50,5" Click="DefineSetpointButt_Click" Height="20"/>
                </Grid>
            </Border>
            <StackPanel Grid.Row="1">
                <GroupBox BorderThickness="0" Background="{StaticResource DarkBackgroundBrush}" Margin="5,0,5,5" Padding="5">
                    <GroupBox.Header>
                        <Label Content="Connection" FontSize="20" FontWeight="Bold" Foreground="#6b8094"/>
                    </GroupBox.Header>
                    <StackPanel>
                        <Button x:Name="ConnectButt" Content="Connect" Click="ConnectButt_Click"/>
                        <UniformGrid Columns="2" Margin="0,5,0,0">
                            <TextBlock Text="Ip address" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                            <TextBox x:Name="ipTextBox" TextChanged="ipTextBox_TextChanged"/>
                        </UniformGrid>
                    </StackPanel>
                </GroupBox>
                <GroupBox BorderThickness="0" Background="{StaticResource DarkBackgroundBrush}" Margin="5,0,5,5" Padding="5" IsEnabled="{Binding IsConnected}">
                    <GroupBox.Header>
                        <Label Content="Measurements" FontSize="20" FontWeight="Bold" Foreground="#6b8094"/>
                    </GroupBox.Header>
                    <StackPanel>
                        <TextBlock Text="{Binding ThermalChamberStatus, StringFormat=Status: {0}}"/>
                        <TextBlock Text="{Binding CurrTemperature, StringFormat=Current \Temperature: {0:#.#}}" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding CurrSetPoint, StringFormat=Setpoint \Temperature: {0:#.#}}" Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding NextSetPoint, StringFormat=Next \Setpoint \Temperature: {0:#.#}}" Margin="0,5,0,0"/>
                        <UniformGrid Columns="2" Margin="0,5,0,0">
                            <Button x:Name="SetButt" Content="Set Temperature" Margin="0,0,5,0" Click="SetButt_Click"/>
                            <TextBox x:Name="SetPointTextBox" TextChanged="SetPointTextBox_TextChanged"/>
                        </UniformGrid>
                        <Button x:Name="StartButt" Content="START Cycle" Margin="0,5,0,0"  Click="StartButt_Click" IsEnabled="{Binding IsSetpointsSetted}"/>
                        <Button x:Name="IntervalChangeButt" Content="Change Interval" Margin="0,5,0,0" Click="IntervalChangeButt_Click" IsEnabled="{Binding IsIntervalSetted}"/>
                        <UniformGrid Columns="2" Margin="0,5,0,0">
                            <TextBlock Text="{Binding Interval, StringFormat=Interval {0} (s)}" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                            <TextBox x:Name="IntervalTextBox" IsEnabled="{Binding IsConnected}" TextChanged="IntervalTextBox_TextChanged"/>
                        </UniformGrid>
                        <UniformGrid Columns="2" Margin="0,5,0,0">
                            <Button x:Name="SaveButton" Content="Save All" Margin="0,0,5,0" Click="SaveButton_Click"/>
                            <CheckBox x:Name="AutosaveCheckBox" Content="AutoSave" VerticalAlignment="Center" IsChecked="{Binding IsAutosaveEnabled}" Checked="AutosaveCheckBox_Checked"/>
                        </UniformGrid>
                    </StackPanel>
                </GroupBox>
                <GroupBox BorderThickness="0" Background="{StaticResource DarkBackgroundBrush}" Margin="5,0,5,5" Padding="5">
                    <GroupBox.Header>
                        <Label Content="Graph" FontSize="20" FontWeight="Bold" Foreground="#6b8094"/>
                    </GroupBox.Header>
                    <StackPanel>
                        <Button x:Name="ClearButton" Content="Clear Plot" Margin="0,0,5,0" Click="ClearButton_Click"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
